/* pages/index/index/index1.wxss */
page{
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
}

/**导航栏**/
.navigation{
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  box-shadow: 100px -100px 100px 0px rgba(220,220,20,0.6);
  display:flex;
  flex-direction: row;
  position: fixed;
  z-index: 500;
}
.search-container{
  width: 55%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.search-image image{
  width: 35rpx;
  height: 35rpx;
  display: flex;
}
.search{
  width: 85%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 70rpx;
  background: #f1f1f1;
  border-radius: 30rpx;
}
.search-input{
  width: 240rpx;
  height: 25rpx;
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #7d7d7d;
  line-height: 35rpx;
}
.navigation-item{
  display: flex;
  width: 15%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.select-tab{
  color: #303030;
  font-weight: 500;
  color: #303030;
  position: absolute;
}

.select-tab-bootom{
  width: 60rpx;
  height: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 8rpx 0px #fbc346; 
  background: #fbc346;
  z-index: 100;
  position: relative;
  top: 35rpx;
}